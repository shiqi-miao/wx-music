  justify-content: space-between;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-top: 50rpx;
}
.search-l{
  width: 584rpx;
  position: relative;
  height: 82rpx
}
.search-int{
  width:516rpx;
  height: 82rpx;
  background: #f9f9f9;
  border-radius: 15rpx;
  padding-left: 80rpx;
  font-size: 28rpx;
  box-sizing: border-box
}
.search-int1{
  position:absolute;
  top:0%;
  right:0%;
  width:100rpx;
  height: 82rpx;
  background: #f9f9f9;
  border-radius: 15rpx;
  font-size: 28rpx;
  box-sizing: border-box
}
.search-r{
  font-size: 28rpx;
  width: 60rpx;
  height: 82rpx;
  line-height: 82rpx;
