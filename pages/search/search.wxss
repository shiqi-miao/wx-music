}
/*热门推荐*/
.hot{
  margin-top: 60rpx
}
.hot-title{
  display: flex;
  justify-content: flex-start
}
.hot-model{
  width: 12rpx;
  height: 45rpx;
  background: #2D879C;
  margin-right:30rpx
}
.hot-content{
  font-size: 35rpx;
  font-weight: bold;
  position: relative;
  top: -5rpx
}
.hot-list{
  display: flex;
  justify-content: flex-start;
  padding: 0 36rpx;
  flex-wrap: wrap
}
.hot-item{
  display: block;
  padding: 20rpx 30rpx;
  border: 2rpx solid #e6e6e6;
  border-radius: 15rpx;
  color: #9a9a9a;
  font-size: 28rpx;
  margin-right: 20rpx;
  margin-top: 35rpx;
}
.article .top{height: 280rpx;border-top-right-radius: 20rpx;border-top-left-radius: 20rpx;overflow: hidden}
.article .bottom{height: 170rpx;padding: 0 40rpx;padding-top:20rpx;border: 2rpx solid #EAEAEA;border-top: 0;border-bottom-right-radius: 20rpx;border-bottom-left-radius: 20rpx}
.article .bottom .title{font-size: 28rpx;margin-bottom: 10rpx}
.article .bottom .detail{font-size: 24rpx; overflow: hidden;text-overflow: ellipsis;color: #999;display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    line-height: 1.6
}
image{width: 100%;height: 100%}