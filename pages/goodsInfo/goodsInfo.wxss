/* pages/goodsInfo/goodsInfo.wxss */
page{background-color: rgba(249, 249, 249, 1);}
button{border-radius: 0;}
input{text-align: center;background: #F9F9F9;border-radius: 12rpx;height: 60rpx;line-height: 60rpx;}
.swiper{height: 500rpx;}
.swiper .img{width:100%;height: 100%;}
.share{position: absolute;right: 30rpx;z-index: 100;}
.share image{width: 72rpx;height: 72rpx;}
.content{position: relative;margin: 0;line-height: 1;padding-top: 20px;}
.content .name{font-weight:32rpx;color: #333;margin-bottom: 20rpx;margin-top: 28rpx;line-height: 1.2;}
.content .price{font-size:36rpx;color: #333333;font-weight:bold;}
.content .price text{font-size:24rpx;color: #999999;font-weight:400;text-decoration: line-through;margin-left: 10rpx;}
.content .infoBox{width: 750rpx;min-height: 212rpx;background-color: #ffffff;padding: 30rpx;}
.content .infoBox .type{font-size: 28rpx;color: #333333;}
.content .infoBox .info{font-size: 28rpx;color: #999999;margin-bottom: 20rpx;}
.content .infoBox .type text{font-size: 28rpx;color: #999999;}
.content .selectBox{width: 690rpx;height: 178rpx;border-radius: 24rpx;background-color: #ffffff;font-size: 28rpx;color: #333333;transform: translateY(-80rpx);margin-top: 30rpx;}
.content .selectBox text{color: #999999;}
.content .selectBox .type{height: 88rpx;padding: 0 30rpx;}
.content .selectBox image{width: 40rpx;height: 40rpx;}
.content .noteBox{width: 690rpx;border-radius: 24rpx;background-color: #ffffff;padding: 30rpx;margin-top: 30rpx;transform: translateY(-80rpx);}
.content .noteBox .title{font-size: 28rpx;font-weight: bold;color: #2D879C;margin-bottom: 20rpx;text-align: center;width: 100%;display: inline-block}
.content .noteBox .page{font-size: 22rpx;color: #999999;line-height: 40rpx;}
.infoBox .user{height:40rpx;border:2rpx solid #C3E0E7;font-size: 20rpx;color:#A4CCD7;line-height: 40rpx;padding: 10rpx;border-radius: 20rpx;}
.infoBox .user image{width: 24rpx;height: 20rpx;margin-right: 2rpx;}
.infoBox .label text{
  display: inline-block;
  padding: 10rpx;
  background:rgba(230, 170, 77, 0.1);
  color:#E6AA4D;
  font-size: 20rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;

}
.num image{width: 48rpx;height: 48rpx;}
.num{width: 236rpx;}
.num .sub{margin-right: 20rpx;}
.num .sum{margin-left: 20rpx;}
.used,.freight{padding:0 16rpx;min-width: 140rpx;height: 44rpx;line-height: 44rpx;font-size:24rpx;color: #999999;background: #F9F9F9;border-radius: 27rpx;text-align: center;}
.goodsInfo image{width: 100%;height: auto;}
.goodsInfo{padding-bottom: 170rpx;display: flex; flex-direction: column;}
.blank{width: 100%;height: 20rpx;background: #F9F9F9;}
.cart{margin-top: 40rpx;position: relative;}
.cart image{width: 60rpx;height: 60rpx;margin-bottom: 20rpx;}
.cart .num{width: 28rpx;height: 28rpx;background: #CF2525;color: #fff;text-align: center;line-height: 28rpx;font-size: 20rpx;position: absolute;top: -4rpx;right: -8rpx;border-radius: 50%;}
.cart .tip{position: absolute;bottom: 10rpx;color: #333333;font-size: 20rpx;}
.btn-l{padding-left:10rpx;width: 66rpx;height: 88rpx;color: #2D879C;text-align: center;line-height: 88rpx;font-size: 28rpx;border-radius: 24rpx;}
.btn-r{padding-right:10rpx;width: 220rpx;height: 88rpx;background: #2D879C;color: #C3E0E7;text-align: center;line-height: 88rpx;font-size: 28rpx;border-top-right-radius: 24rpx;border-bottom-right-radius: 24rpx;}
.toTop{width: 80rpx;height: 80rpx;position: fixed;bottom: 260rpx;right: 24rpx;}
.toTop .img{width: 100%;height: 100%;}
/* 传语音 */
.audio{
  display:flex;
  position:relative;
  height:140rpx;
  line-height:140rpx;
  background:#f7f7f7;
  width:690rpx;
  margin:0 auto;
}
.audio_img{
  position: absolute;
  top:-15rpx;
  right:-15rpx;
  width:30rpx;
  height:30rpx;
}
.audio_btn{
  width:88rpx;
  height:88rpx;
  margin-top:28rpx;
}
.audio_pro{
  margin-top:36rpx;
  margin-left:20rpx;
  width:410rpx;
}
.audio_text{
  font-weight: bold;
  margin-left:36rpx;
  color:#90BED5;
  font-size: 10pt
}