.num{
  width: 30rpx;
  height: 30rpx;
  background: #CF2525;
  color: #fff;
  text-align: center;
  line-height: 30rpx;
  font-size: 20rpx;
  position: absolute;
  top: 10rpx;
  right: 174rpx;
  border-radius: 50%;
}
.tab-bar {
  width:710rpx;
  border-radius: 24rpx;
  position: fixed;
  bottom: 30rpx;
  left: 20rpx;
  right: 0;
  height: 108rpx;
  background: #ffffff;
  display: flex;
  box-shadow: 0 6rpx 20rpx 0 rgba(0, 0, 0, 0.07);
}
.big-img{
  width:120rpx!important;
  height: 120rpx!important;
  transform: translateY(-20%);
  /* position: absolute;
  bottom: 50px; */
}
.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item{
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.tab-bar-item image {
  width: 48rpx!important;
  height: 48rpx!important;
  margin-bottom: 4rpx;
}
.tab-bar-item1 image {
  width: 120rpx!important;
  height: 120rpx!important;
  margin-bottom: 0;
  position: absolute;
  top: 0rpx;
}
.tab-bar-item view {
  font-size: 10px;
}
