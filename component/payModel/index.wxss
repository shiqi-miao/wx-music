.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}
.modal-dialog .title{
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
  font-weight: bold;
  margin-bottom: 50rpx
}
.modal-dialog .detail{
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 50rpx;
  line-height: 1.7
}
.modal-dialog {
    position:relative;
    width: 80vw;
    height: 320rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    transform: translate(-50%,-50%);
    left: 50%;
    z-index: 9999;
    background: #fff;
    /* border-top-left-radius: 36rpx;
    border-top-right-radius: 36rpx; */
    border-radius: 36rpx;
    padding: 40rpx 60rpx
}

.modal-title {
    position:absolute;
    top:60rpx;
    left:160rpx;
    font-size: 28rpx;
    color: rgba(51, 51, 51, 1);
    text-align: right;

}
.close {
    width: 40rpx;
    height: 40rpx;
}
.modal-content {
    padding: 50rpx 32rpx;
    text-align: center;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    font-size: 34rpx;
    line-height: 86rpx;
    justify-content: center;
    padding: 10rpx 0;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
}
