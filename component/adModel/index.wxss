.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 99999;
    color: #fff;
}
.modal-dialog {
    position:relative;
    width: 630rpx;
    height: 960rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    transform: translate(-50%,-50%);
    left: 50%;
    z-index: 99999;
    background: transparent;
    animation-duration: 0.1s;
    animation-name: slidein;
}
@keyframes slidein {
    from {
        width: 320rpx;
        height: 480rpx;
    }
    to {
        width: 630rpx;
        height: 960rpx;
    }
  }  
